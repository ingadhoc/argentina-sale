    <!-- we force priority greater than 20 so that it dont break inheritance with delivery view -->
    <template id="report_delivery_document" priority="20" inherit_id="stock.report_delivery_document">

        <!-- custom header and footer -->
        <t t-set="o" position="after">
            <t t-set="custom_header" t-value="'l10n_ar.custom_header'"/>
            <t t-set="report_date" t-value="o.date_done"/>
            <t t-set="report_number" t-value="o.vouchers"/>
            <t t-set="pre_printed_report" t-value="o.book_id.lines_per_voucher"/>
            <t t-set="document_letter" t-value="o.document_type_id.l10n_ar_letter or 'X'"/>
            <t t-set="document_legend" t-value="'Doc. no vÃ¡lido como factura'"/>
            <t t-set="report_name" t-value="o.document_type_id.name or 'Comprobante de Entrega'"/>
            <t t-set="header_address" t-value="o.picking_type_id.warehouse_id.partner_id or o.company_id.partner_id"/>

            <t t-set="custom_footer">
                <div class="row">
                    <div name="footer_left_column" class="col-8 text-center">
                        <img t-if="o.l10n_ar_afip_barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;humanreadable=1' % ('I2of5', o.l10n_ar_afip_barcode)" alt="Barcode"  style="height:80px"/>
                    </div>
                    <div name="footer_right_column" class="col-4 text-right">
                        <div t-if="not o.book_id.lines_per_voucher and o.book_id.l10n_ar_cai">
                            CAE: <span t-field="o.book_id.l10n_ar_cai"/>
                        </div>
                        <div t-if="not o.book_id.lines_per_voucher and o.book_id.l10n_ar_cai_due">
                            CAE Due Date: <span t-field="o.book_id.l10n_ar_cai_due"/>
                        </div>
                        <div name="pager" t-if="report_type == 'pdf'">
                            Page: <span class="page"/> / <span class="topage"/>
                        </div>
                    </div>
                </div>
            </t>
        </t>

        <!-- remove default partner address -->
        <t t-set="address" position="replace"/>

        <!-- remove default document title -->
        <h2 position="replace"/>

        <div class="row mt32 mb32" position="replace">
            <div id="informations" class="row mt8 mb8">
                <div class="col-6">
                    <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                    <t t-set="commercial_partner" t-value="partner.commercial_partner_id"/>

                    <!-- IDENTIFICACION (ADQUIRIENTE-LOCATARIO-PRESTARIO) -->

                    <!-- (14) Apellido uy Nombre: Denominicacion o Razon Soclial -->
                    <strong>Customer: </strong><span t-field="commercial_partner.name"/>

                    <!-- (15) Domicilio Comercial -->
                    <br/>

                    <span t-if="commercial_partner != partner"><strong>Deliver to: </strong><span t-field="partner.name"/></span>
                    <span t-esc="partner" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True, "no_tag_br": True}'/>

                    <!-- (16) Responsabilidad AFIP -->
                    <strong>VAT Cond: </strong><span t-field="partner.l10n_ar_afip_responsibility_type_id"/>

                    <!-- (17) CUIT -->
                    <t t-if="partner.vat and partner.l10n_latam_identification_type_id.name and partner.l10n_latam_identification_type_id.name != 'Sigd'">
                        <br/><strong><t t-esc="partner.l10n_latam_identification_type_id.name or o.company_id.country_id.vat_label" id="inv_tax_id_label"/>:</strong> <span t-field="partner.l10n_ar_formatted_vat"/>
                    </t>

                </div>
                <div class="col-6">

                    <t>
                        <strong>Order:</strong>
                        <span t-field="o.origin"/>
                    </t>

                    <t t-if="o.sudo().sale_id.client_order_ref">
                        <br/><strong>Customer Reference:</strong>
                        <span t-field="o.sudo().sale_id.client_order_ref"/>
                    </t>
                    <t t-if="o.weight">
                        <br/><strong>Weight:</strong>
                        <span t-field="o.weight"/>
                        <span t-field="o.weight_uom_name"/>
                    </t>
                    <span t-if="o.number_of_packages and o.shipping_weight"> - </span>
                    <t t-if="o.number_of_packages">
                        <br t-if="not o.shipping_weight"/><strong>Packages Qty:</strong>
                        <span t-field="o.number_of_packages"/>
                    </t>
                    <t t-if="o.declared_value">
                        <br/><strong>Declared Value:</strong>
                        <span t-field="o.declared_value"/>
                    </t>

                </div>

            </div>
        </div>

    </template>

</odoo>
